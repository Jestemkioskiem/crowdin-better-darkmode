{
  "manifest_version": 2,
 
  "name": "BetterCrowdinDarkmode",

  "version": "1.0.1",

  "description": "Browser Extension that alters the CSS of crowdin's editor page to be easier on your eyes.",

  "icons": {
  	"16" : "icons/icon16.png",
  	"48": "icons/icon48.png",
  	"128": "icons/icon128.png"
  },

  "content_scripts": [{
  	"run_at" : "document_idle",
    "js" : ["src/jquery.js", "script.js"],
    "matches": ["*://crowdin.com/translate/*"]
  }]
}
